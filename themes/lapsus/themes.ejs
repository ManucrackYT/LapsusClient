  <!-- JavaScript to check accessibility before redirecting -->
  <script>
    const marketUrl = 'https://market.lapsusdevs.tech/index.php?route=/resources/';
    const dashboardUrl = '../dashboard';
    
    async function checkMarketplace() {
      // Method 1: Try to load an image from the domain
      return new Promise((resolve) => {
        // Create an image element
        const img = new Image();
        let hasResolved = false;
        
        // Try to load favicon or any image
        img.onload = function() {
          if (!hasResolved) {
            hasResolved = true;
            console.log('Marketplace image loaded successfully');
            resolve(true);
          }
        };
        
        img.onerror = function() {
          if (!hasResolved) {
            hasResolved = true;
            console.log('Marketplace image failed to load');
            // Try method 2
            testWithXMLHttpRequest().then(resolve);
          }
        };
        
        // Set timeout
        setTimeout(() => {
          if (!hasResolved) {
            hasResolved = true;
            console.log('Image check timeout');
            testWithXMLHttpRequest().then(resolve);
          }
        }, 5000);
        
        // Try to load favicon with cache busting
        img.src = 'https://market.lapsusdevs.tech/favicon.ico?t=' + Date.now();
      });
    }
    
    async function testWithXMLHttpRequest() {
      return new Promise((resolve) => {
        try {
          const xhr = new XMLHttpRequest();
          xhr.timeout = 5000;
          let hasResolved = false;
          
          xhr.onload = function() {
            if (!hasResolved) {
              hasResolved = true;
              // Check if status is in 200-299 range
              if (xhr.status >= 200 && xhr.status < 300) {
                console.log('XHR success:', xhr.status);
                resolve(true);
              } else {
                console.log('XHR non-200 status:', xhr.status);
                resolve(false);
              }
            }
          };
          
          xhr.onerror = function() {
            if (!hasResolved) {
              hasResolved = true;
              console.log('XHR error event fired');
              resolve(false);
            }
          };
          
          xhr.ontimeout = function() {
            if (!hasResolved) {
              hasResolved = true;
              console.log('XHR timeout');
              resolve(false);
            }
          };
          
          xhr.onabort = function() {
            if (!hasResolved) {
              hasResolved = true;
              console.log('XHR aborted');
              resolve(false);
            }
          };
          
          // Try to make request
          xhr.open('GET', 'https://market.lapsusdevs.tech/');
          xhr.send();
          
        } catch (error) {
          console.log('XHR setup error:', error);
          resolve(false);
        }
      });
    }
    
    async function startRedirect() {
      const loadingText = document.querySelector('#loading-container p:nth-child(3)');
      const errorDiv = document.getElementById('error-message');
      const successDiv = document.getElementById('success-message');
      const mainMessage = document.querySelector('#loading-container p:nth-child(2)');
      
      loadingText.textContent = 'Checking marketplace status...';
      
      try {
        const isAvailable = await checkMarketplace();
        console.log('Final availability result:', isAvailable);
        
        if (isAvailable) {
          mainMessage.textContent = 'Marketplace is available!';
          loadingText.textContent = 'Redirecting you now...';
          successDiv.classList.remove('hidden');
          setTimeout(() => window.location.href = marketUrl, 2000);
        } else {
          mainMessage.textContent = 'Marketplace is currently unavailable';
          loadingText.textContent = 'Redirecting to dashboard instead...';
          errorDiv.classList.remove('hidden');
          setTimeout(() => window.location.href = dashboardUrl, 3000);
        }
      } catch (error) {
        console.error('Error during check:', error);
        // On any error, assume it's not available
        mainMessage.textContent = 'Unable to verify marketplace status';
        loadingText.textContent = 'Redirecting to dashboard for safety...';
        errorDiv.classList.remove('hidden');
        setTimeout(() => window.location.href = dashboardUrl, 3000);
      }
    }
    
    document.addEventListener('DOMContentLoaded', startRedirect);
  </script>
